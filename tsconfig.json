{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "esnext",
        "target": "es5",
        "allowJs": false,
        "lib": ["es7", "es2015", "esnext"],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "declaration": true,
        "strictNullChecks": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "paths": {
            "@utils/*": ["src/utils/*"],
            "@algorithm/*": ["src/sort-algorithm/*"]
        }
    },
    "exclude": [
        "dist",
        "log",
        "node_modules",
        "tmp"
    ]
}